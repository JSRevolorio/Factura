@model Facturacion.Models.CLIENTE

@using (Html.BeginForm("FindCliente", "Venta", FormMethod.Post, new { @id = "formBuscarCliente" }))
{
<div class="form-horizontal">
    <h4>Cliente</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        <div class="col-md-10">
            @Html.EditorFor(model => model.nit, new { htmlAttributes = new { @class = "form-control", @placeholder = "Numero De NIT", @id = "noNiT" } })
            @Html.ValidationMessageFor(model => model.nit, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nombre", @id = "NombreCliente", @disabled = "disabled" } })
            @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            @Html.EditorFor(model => model.direccion, new { htmlAttributes = new { @class = "form-control", @placeholder = "Direccion", @id = "DireccionCliente", @disabled = "disabled" } })
            @Html.ValidationMessageFor(model => model.direccion, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class=" col-md-10" id="CrearCliente">
            <input type="submit" value="Buscar" class="btn btn-outline-primary" id="Buscar"/>
        </div>
    </div>
</div>
}
