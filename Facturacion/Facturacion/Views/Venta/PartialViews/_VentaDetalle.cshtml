@model Facturacion.Models.VENTADETALLE

@using (Html.BeginForm("Detalle", "Venta", FormMethod.Post, new { @id = "formDetalleVenta" }))
{
    <div class="form-horizontal">
        <h4>Producto</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.idVenta, new { @id = "idVenta", })
        <div class="form-group">
            <div class="col-md-10">
                @Html.DropDownList("idProducto", null,"Producto", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idProducto, "", new { @class = "text-danger" })
            </div>
        </div>
 
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.cantidad, new { htmlAttributes = new { @class = "form-control", @placeholder = "Cantidad", } })
                @Html.ValidationMessageFor(model => model.cantidad, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Agregar" class="btn btn-outline-primary" id="Agregar" />
            </div>
        </div>
    </div>
}

